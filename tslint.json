{
    "rules": {
        "align": [
            true, 
            "parameters",
            "arguments",
            "statements"
        ],
        "class-name": true,
        "comment-format": [
            true,
            "check-space",
            "check-lowercase"
        ],
        "curly": true,
        "indent": [true, 4],
        "label-undefined": true,
        "max-line-length": 90,
        "no-construct": true,
        "no-trailing-comma": true,
        "no-trailing-whitespace": true,
        "no-unreachable": true,
        "no-unused-expression": true,
        "no-unused-variable": true,
        "no-use-before-declare": true,
        "quotemark": [true, "single"],
        "radix": true,
        "semicolon": true,
        "triple-equals": true,
        "typedef": [
            true,
            "call-signature",
            "parameter"
        ]
    }
}
